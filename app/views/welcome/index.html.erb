<a-scene>
  <a-assets>
    <a-asset-item id="railer-rail"
      src="/assets/railer-rail.dae"></a-asset-item>
  </a-assets>
  <a-mixin id="words-company"></a-mixin>
  <a-mixin id="words-tagline"></a-mixin>
  <script>
    function onResize() {
      const aspectRatio = window.innerWidth / window.innerHeight;
      const lowAspect = (aspectRatio < 1.0);
      const textValueCompany =
        lowAspect ? "Alkaline\nGames\nLLC" : "Alkaline Games LLC";
      const textValueTagline =
        lowAspect ? "...basically,\nwe make games" : "...basically, we make games";
      const textWidthCompany =
        lowAspect ? "2500" : "3000";
      const textWidthTagline =
        lowAspect ? "1000" : "1500";
      const positionCompany =
        lowAspect ? "0 100 0" : "0 50 0";
      const positionTagline =
        lowAspect ? "0 -160 0" : "0 -80 0";
      document.getElementById("words-company").setAttribute(
        "text", "align: center;"
                + "color: #ff3b69;"
                + "font: /assets/Jam3/Roboto-msdf.json;"
                + "value: " + textValueCompany + ";"
                + "width: " + textWidthCompany + ";");
      document.getElementById("words-tagline").setAttribute(
        "text", "align: center;"
                + "color: #ffbd5c;"
                + "font: /assets/Jam3/Roboto-msdf.json;"
                + "value: " + textValueTagline + ";"
                + "width: " + textWidthTagline + ";");
      <!-- TODO: ### position only updates on the first call
      document.getElementById("words-company").setAttribute(
        "position", positionCompany);
      document.getElementById("words-tagline").setAttribute(
        "position", positionTagline);
    }
    onResize();
    document.getElementsByTagName("body")[0].setAttribute(
      "onResize", "onResize()");
  </script>
  <a-entity id="sky"
    geometry="primitive: sphere; radius: 5000"
    material="shader: gradient; topColor: 000 000 050; bottomColor: 255 200 150"
    scale="-1 1 1">
    <!-- requires <script src="https://unpkg.com/aframe-gradient-sky@1.0.4/dist/gradientsky.min.js"></script> -->
  </a-entity> <a-entity id="dust"
    particle-system="preset: dust; color: #ff7f3f; particleCount: 2000; rotationAngle: 0; rotationAxis: z; texture: /assets/aframe-more/ideaspacevr/aframe-particle-system-component/smokeparticle.png">
    <!-- requires <script src="https://unpkg.com/aframe-particle-system-component@1.0.10/dist/aframe-particle-system-component.min.js"></script> -->
  </a-entity>
  <a-entity id="ocean"
    ocean="density: 30; width: 50; depth: 50; speed: 1"
    material="color: #1fbfcf; opacity: 0.8; metalness: 1; roughness: 0.8"
    rotation="-90 0 0">
    <!-- requires <script src="https://unpkg.com/aframe-extras.ocean@%3.8.6/dist/aframe-extras.ocean.min.js"></script> -->
  </a-entity>
  <a-entity position="0 500 -1000">
    <a-entity mixin="words-company"></a-entity>
    <a-entity mixin="words-tagline"></a-entity>
  </a-entity>
<!--
  <a-entity position="-1000 500 0" rotation="0 90 0">
    <a-text mixin="words-company" position="0 50 0"></a-text>
    <a-text mixin="words-tagline" position="0 -80 0"></a-text>
  </a-entity>
  <a-entity position="1000 500 0" rotation="0 -90 0">
    <a-text mixin="words-company" position="0 50 0"></a-text>
    <a-text mixin="words-tagline" position="0 -80 0"></a-text>
  </a-entity>
  <a-entity position="0 500 1000" rotation="0 180 0">
    <a-text mixin="words-company" position="0 50 0"></a-text>
    <a-text mixin="words-tagline" position="0 -80 0"></a-text>
  </a-entity>
-->
  <a-entity id="about-section" position="-250 150 -1000">
    <a-entity id="about-text" position="0 0 10" visible=false>
      <a-text position="0 -60 0"
        text="align: center; color: white; font: /assets/Jam3/Roboto-msdf.json;
        value: Co-founded by two tech and game industry\nveterans with over 25 years of experience each,\nwe specialize in VR for our own games and are\navailable for VR/AR contract development.\nFor more information contact us at info@alkalinegames.com;
        width: 900">
      </a-text>
    </a-entity>
    <a-sphere id="about-moon" position="0 0 0" radius= "50"
      class="intersectable" color="#dfdfff" shader="flat" visible=true
      light="type: point; color: #dfdfff; intensity: 1"
      event-set__entercolor="_event: click; material.color: #ffffff"
      event-set__enterlight="_event: click; light.intensity: 1.3"
      event-set__entertext="_event: click; _target: #about-text; visible: true"
      event-set__leavecolor="_event: eventReset; material.color: #dfdfff"
      event-set__leavelight="_event: eventReset; light.intensity: 1"
      animation="property: position; startEvents: click; easing: easeInOutQuad; dur: 300; to: 0 130 0"
      animation__reset="property: position; startEvents: eventReset; easing: easeInOutQuad; dur: 300; to: 0 0 0">
<!-- TODO: @@@ mouseenter EVENT IS NOT WORKING WELL
      event-set__entercolor="_event: mouseenter; material.color: #ffffff"
      event-set__enterlight="_event: mouseenter; light.intensity: 1.3"
      event-set__entertext="_event: mouseenter; _target: #about-text; visible: true"
      animation="property: position; startEvents: mouseenter; dur: 300; to: 0 175 100"
-->
      <a-text position="15 -6 60"
        text="align: center; color: #00003f; font: /assets/Jam3/Roboto-msdf.json;
        value: about;
        width: 600">
      </a-text>
    </a-sphere>
<!-- TODO: @@@ a-sphere SCALED DOESN'T INTERSECT ACCURATELY WITH cursor raycaster
    <a-sphere id="about-trigger" radius= "1" scale="400 150 1"
-->
    <a-plane id="about-text-plane" width="1000" height="400"
      class="intersectable" material="transparent: true; opacity: 0"
      event-proxy="listen: mouseleave; target: #about-moon; emit: eventReset"
      event-set__leavetext="_event: mouseleave; _target: #about-text; visible: false">
    </a-plane>
  </a-entity>
  <a-entity id="railer" position="4 0.1 -10" rotation="0 90 0">
    <a-collada-model src="#railer-rail"
      animation="property: position; easing: easeInOutQuad; dir: alternate; dur: 1000; to: 0 0.15 0; loop: true">
      <!-- requires <script src="https://unpkg.com/aframe-animation-component@3.2.5/dist/aframe-animation-component.min.js"></script> -->
    </a-collada-model>
    <a-text position="-2 2 0" rotation="0 -120 0"
      text="align: center; color: #7fdfcf; font: /assets/Jam3/Roboto-msdf.json;
      value: Railer™ is our\noriginal Gear VR game\n coming soon...;
      width: 10">
    </a-text>
  </a-entity>
  <a-entity id="news" position="-0.55 1.1 -1.5" rotation="0 0 0">
    <a-text
      text="align: left; color: #ffff7f; font: /assets/Jam3/Roboto-msdf.json;
      value: NEWSFLASH\nSerafina spoke at the 2017\nDenver Comic-Con panels!\n(details also coming soon...);
      width: 2">
    </a-text>
  </a-entity>
  <a-entity>
    <a-camera mouse-cursor="objects: .intersectable"
        look-controls-enabled="true"
        wasd-controls-enabled="true">
      <a-cursor color="black" fuse="true" far="1100" objects=".intersectable">
      </a-cursor>
    </a-camera>
  </a-entity>
</a-scene>

